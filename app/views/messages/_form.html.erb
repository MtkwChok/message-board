<%= form_for(@message, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="namae" class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control", :id => "namae" %>
    </div>
  </div>
  <div class="form-group">
    <label for="toshi" class="col-sm-2 control-label">年齢：</label>
    <div class="col-sm-10">
      <%= f.text_field :age, :class => "form-control", :id => "toshi" %>
    </div>
  </div>
  <div class="form-group">
    <label for="naiyou" class="col-sm-2 control-label">内容：</label>
    <div class="col-sm-10">
      <%= f.text_area :body, :class => "form-control", :rows => "2", :id => "naiyou" %>
    </div>
  </div>
  <div class="from-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "送信", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
